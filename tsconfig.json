{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "noEmit": true,
    "sourceMap": true,
    "target": "esnext",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.tsx",
    "**/*.ts",
  ]
}